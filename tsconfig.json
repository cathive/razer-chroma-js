{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowSyntheticDefaultImports": false,
        "allowUnusedLabels": false,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "declaration": true,
        "target": "ES2015",
        "module": "CommonJS",
        "outDir": "lib",
        "rootDirs": [
            "src"
        ],
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**"
    ]
}
